export async function getStaticPaths() {
    const articles = await queryArticles()

    //console.log(posts)
    //console.log(posts[0])

	return articles.map((partialArticle) => {
        return {
            params: {
                slug: partialArticle.slug,
            },
            props: {
                partialArticle,
            },
        };
    });

}

interface Props {
	partialArticle: Article;
}

const { partialArticle } = Astro.props;

